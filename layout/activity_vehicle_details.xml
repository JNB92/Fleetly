<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="80dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/vehicleImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/round_directions_bus_24" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:stretchColumns="1">

        <!-- Vehicle Driver Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Driver:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleDriver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Name Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Name:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Type Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Type:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Number Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Number:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Registration Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Registration:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleRegistration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Source Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Source:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Destination Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Destination:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Location Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Location:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleCurrentLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Temperature Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Temperature:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleGoodsTemperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

        <!-- Vehicle Status Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Vehicle Status:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vehicleFuelStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>
